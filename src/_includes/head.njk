        }
        
        .pulse-on-hover:hover {
            animation: pulseGlow 1s ease-in-out;
        }
        
        .stat-card {
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .trust-badge {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .trust-badge:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-color: #8F3C3C;
        }
        
        .section-divider {
            background: linear-gradient(90deg, transparent, #8F3C3C, transparent);
            height: 2px;
            margin: 4rem auto;
            max-width: 200px;
        }
        
        .form-input {
            transition: all 0.3s ease;
            border: 2px solid #e5e7eb;
        }
        
        .form-input:focus {
            border-color: #8F3C3C;
            box-shadow: 0 0 0 3px rgba(143, 60, 60, 0.1);
            transform: translateY(-2px);
        }
        
        .process-step {
            transition: all 0.3s ease;
        }
        
        .process-step:hover {
            transform: translateX(10px);
        }
        
        .timeline-item {
            position: relative;
            padding-left: 2rem;
        }
        
        .timeline-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0.5rem;
            width: 1rem;
            height: 1rem;
            background: #8F3C3C;
            border-radius: 50%;
            box-shadow: 0 0 0 4px rgba(143, 60, 60, 0.2);
        }
        
